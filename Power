public class Solution {
    public int isPower(int A) {
        int j=2;
        if(A==1)
        return 1;
        
        for(int i=2;i*i<=A;i++)
        {
            int pow=(int)Math.pow(i,j);
            while(pow<=A && pow>0)
            {
                if(pow==A)
                return 1;
                else
                j++;
            }
            
        }
        return 0;
    }
}
